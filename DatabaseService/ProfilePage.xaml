<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DatabaseService.ProfilePage"
             Title="ProfilePage">
    <StackLayout Padding="20">
        <Entry x:Name="nameEntry" Placeholder="Name"/>
        <Entry x:Name="surnameEntry" Placeholder="Surname"/>
        <Entry x:Name="emailEntry" Placeholder="Email"/>
        <Picker x:Name="genderPicker">
            <Picker.Items>
                <x:String>Male</x:String>
                <x:String>Female</x:String>
            </Picker.Items>
        </Picker>
        <Editor x:Name="bioEditor" Placeholder="Bio" HeightRequest="100"/>
        <Button Text="Save Profile" Clicked="OnSaveProfileButtonClicked" />
    </StackLayout>
</ContentPage>